-- Criação da tabela de cadastro de pessoa jurídica:

CREATE TABLE cadastro_empresa (
id_empresa INT PRIMARY KEY AUTO_INCREMENT,
razao_social VARCHAR(50) NOT NULL,
nome_fantasia VARCHAR(100) NOT NULL,
cnpj VARCHAR(18) UNIQUE NOT NULL,
hr_func VARCHAR(20),
info VARCHAR(255),
senha VARCHAR(255),
logo_img MEDIUMBLOB
);

-- Inserção de dados na tabela:

INSERT INTO cadastro_empresa (razao_social, nome_fantasia, cnpj, hr_func, info, senha, logo_img)
VALUES ('$razao_social', '$nome_fantasia', '$cnpj', '$hr_func', '$info', md5('$senha'), '$logo_img');

-- Criação da tabela de dados de contato de pessoa jurídica

CREATE TABLE contato_empresa (
    id_contato INT PRIMARY KEY AUTO_INCREMENT,
    id_cadastro INT NOT NULL,
    cep_empresa VARCHAR(15) NOT NULL DEFAULT('00.000-00'),
    endereço_empresa VARCHAR(80),
    tel_1 VARCHAR(15) NOT NULL UNIQUE,
    tel_2 VARCHAR(15),
    mail_1 VARCHAR(50),
    mail_2 VARCHAR(50),
    FOREIGN KEY(id_cadastro) REFERENCES cadastro_empresa(id_empresa)
);

-- Sugestão de inserção de dados de contato e consulta no banco:

$id_cadastro = 'SELECT id_empresa FROM cadastro_empresa WHERE cadastro_empresa.cnpj = $cnpj'

INSERT INTO contato_empresa (id_cadastro, cep_empresa, endereço_empresa, tel_1, mail_1)
VALUES ('$id_cadastro','$cep_empresa', '$endereço_empresa', '$tel_1', '$mail_1');

SELECT cadastro_empresa.razao_social, contato_empresa.* FROM cadastro_empresa
JOIN contato_empresa ON cadastro_empresa.id_empresa = contato_empresa.id_cadastro;