CREATE DATABASE smile_net
DEFAULT CHAR SET utf8mb4
DEFAULT COLLATE utf8mb4_general_ci;

-- Considerando um sistema de login com base em username e senha:

CREATE TABLE usuario (
id_usuario INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
username VARCHAR(32) NOT NULL UNIQUE,
senha VARCHAR(32) NOT NULL
);

INSERT INTO usuario (username, senha)
VALUES ('input de username php', 'input de senha php');

-- Seguindo as infos de cadastro da ficha de anamnese apresentada:

CREATE TABLE cadastros (
    id_cadastro INT PRIMARY KEY AUTO_INCREMENT,
    nome VARCHAR(100) NOT NULL,
    nascimento DATE NOT NULL,
    rg VARCHAR(100) UNIQUE NOT NULL,
    cpf VARCHAR(15) UNIQUE NOT NULL,
    estado_nasc VARCHAR(50),
    nacionalidade VARCHAR(40) NOT NULL DEFAULT('Brasileiro(a)'),
    possui_carteira ENUM('Sim','Não'),
    num_carteira VARCHAR(30)
);

INSERT INTO cadastros (rg, cpf, nome, nascimento, estado_nasc, nacionalidade, possui_carteira, num_carteira)
VALUES ('input rg', 'input cpf', 'input nome', '2002-07-08', 'input estado_nasc', 'input nacionalidade', 'Sim', 000000);

-- Cadstro de um ou mais endereços por pessoa:

CREATE TABLE endereços (
id_endereço INT PRIMARY KEY AUTO_INCREMENT,
cadastro_id INT NOT NULL,
cidade_ed VARCHAR(32),
estado_ed VARCHAR(2),
cep VARCHAR(10) NOT NULL,
rua VARCHAR(100) NOT NULL,
numero VARCHAR(10) DEFAULT 'S/N',
contato VARCHAR(80) NOT NULL,
FOREIGN KEY(cadastro_id) REFERENCES cadastros(id_cadastro)
);

INSERT INTO endereços (cadastro_id, cidade_ed, estado_ed, cep, rua, numero, contato) 
VALUES (1, 'input cidade', 'FF', '000000', 'input rua', 'input num', 'input contato');

-- Consulta de endereços por id do cadastro:

SELECT cadastros.nome, endereços.* FROM cadastros
JOIN endereços ON cadastros.id_cadastro = endereços.cadastro_id;